<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrollment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <h1 class="text-center mt-4 mb-5">Student Enrollment Form</h1>
    <div class="container">
        <div class="card">
            <div class="card-body row row-cols-2 ">
                <div class="border-end">
                    <h2>Register</h2>
                    <form action="/" method="post">
                        <div class="input-group mb-3">
                            <label class="input-group-text">Name</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text">Email</label>
                            <input type="email" name="email" class="form-control">
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text">Website</label>
                            <input type="text" name="website" class="form-control">
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text">Image link</label>
                            <input type="text" name="image" class="form-control">
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text">Gender</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="male" value="Male">
                                    <label class="form-check-label" for="male">
                                        Male
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                                    <label class="form-check-label" for="female">
                                        Female
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="other" value="Other">
                                    <label class="form-check-label" for="other">
                                        Other
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text">Skills</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="skills" value="HTML" id="html">
                                    <label class="form-check-label" for="html">
                                        HTML
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="skills" value="CSS" id="css">
                                    <label class="form-check-label" for="css">
                                        CSS
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="skills" value="JavaScript" id="js">
                                    <label class="form-check-label" for="js">
                                        JavaScript
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="skills" value="NodeJS" id="node">
                                    <label class="form-check-label" for="node">
                                        NodeJS
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="skills" value="ReactJS" id="react">
                                    <label class="form-check-label" for="react">
                                        ReactJS
                                    </label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div>
                    <h2>Enrolled Students</h2>
                    <% students%>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">

                                </h5>
                                <p class="card-text">

                                </p>
                            </div>
                        </div>
                    <% %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>